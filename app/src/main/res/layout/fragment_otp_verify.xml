<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.OtpVerify">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/otp"
            android:layout_width="280dp"
            android:layout_height="250dp"/>
        <TextView
            android:id="@+id/verify_no"
            android:text="Verify +916370942090"
            android:textSize="25sp"
            android:textStyle="bold|normal"
            android:textAlignment="center"
            android:textColor="#2D45CA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Enter the OTP code to verify your Phone Number"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/OTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_shape"
                    android:hint="Enter OTP"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="#1C1C1C"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold|normal"
                    android:autofillHints="" />
                <Button
                    android:id="@+id/continueBtn"
                    android:textSize="17sp"
                    android:textStyle="bold|normal"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:backgroundTint="#88652EA3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>